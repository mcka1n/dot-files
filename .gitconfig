[user]
  name  = Ed Mckain
  email = mckain.default@gmail.com
[github]
  user = mcka1n
[core]
  pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim -f
  autocrlf = input
  safecrlf = true
  excludesfile = /Users/mckain/.global_gitignore
[advice]
  statusHints = false
[web]
  browser = open
[push]
  config = default
  default = tracking
[rebase]
  autosquash = true
[merge]
  summary = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[color "status"]
  added = yellow
  changed = green
  untracked = blue
[alias]
  b   = browse
  d   = diff
  ds  = diff --staged
  dw  = diff --color-words
  s   = status -s -b
  c   = commit -v
  co  = checkout
  w   = whatchanged --decorate
  wp  = whatchanged --decorate -p
  a   = add -u
  aa  = add --all :/
  td  = merge --no-ff
  sm  = submodule
  smu = submodule foreach git pull origin master
  ap  = add -u -p
  pr  = "!f() { git fetch origin refs/pull/$1/head:pr/$1 && git co pr/$1; } ; f"
  up  = "!git fetch upstream && git rebase upstream/master"
  bam = "!source ~/.githelpers && delete_local_merged_branches"
  bamr = "!source ~/.githelpers && delete_remote_merged_branches"
  summary = "!source ~/.githelpers && weekly_summary"
  l = log --pretty='format:%C(yellow)%h %C(blue)%ad %C(reset)%s%C(red)%d %C(green)%an%C(reset), %C(cyan)%ar' --date=short
